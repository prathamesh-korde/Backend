<% layout("/layouts/boilerpalte.ejs") %>

    <h1> All Listings</h1>
   <!--
    <form method="get" action="/Listings/new">
        <button> Create new Listing</button>
    </form>
    -->
 
    <div class="row row-cols-lg-3 row-cols-mid-3 row-cols-sm-1 row-cols-xs-1">
    <% for(let listing of allListings) { %>

     <a href="/Listings/<%=listing._id %>" class="listing-links">
    <div class="card  col isting-card" >
  <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing image" style="height: 20rem;">
  <div class="card-img-overlay">
  </div>
  <div class="card-body">
    <h5 class="card-title">Card title</h5>
    <p class="card-text">
        <b><%= listing.title %></b>
        <br><br>
        &#8377; <%= listing.price.toLocaleString("en-IN") %> / Night
    </p>
  </div>
</div>
</a>
 <% }%>
 
 
 </div>


